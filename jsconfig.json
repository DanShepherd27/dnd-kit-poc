{
  "compilerOptions": {
    "module": "ES6",
    "baseUrl": "./node_modules",
    "outDir": "./dist/",
    "removeComments": true,
    "sourceMap": true,
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "checkJs": true,
    "jsx": "react",
    "paths": {}
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
